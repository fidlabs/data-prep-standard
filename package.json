{
  "name": "filecoin-prep",
  "version": "0.1.0",
  "description": "Tool for Filecoin storage data preparation with manifests",
  "author": "Bowball Technologies Ltd.",
  "license": "Apache-2.0 OR MIT",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "filecoin-prep": "./dist/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fidlabs/data-prep-standard.git"
  },
  "keywords": [
    "filecoin",
    "data",
    "preparation",
    "data-prep",
    "data-preparation"
  ],
  "scripts": {
    "build": "rimraf dist && npx tsc && chmod a+x dist/bin.js",
    "test": "npm run test:unit",
    "test:unit": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --detectOpenHandles --verbose --coverage --roots ./src  --testPathIgnorePatterns \".(e2etest).\"",
    "test:system": "rimraf testing/outputs && NODE_OPTIONS=\"--experimental-vm-modules --enable-source-maps\" jest --verbose --roots ./dist --testPathIgnorePatterns \"\\.(test)\\.\"",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "prettier": "prettier --check ./src ",
    "prettier:fix": "prettier --write ./src",
    "format": "npm run lint:fix && npm run prettier:fix"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@filoz/synapse-sdk": "^0.23.2",
    "@ipld/car": "^5.4.2",
    "@ipld/unixfs": "^3.0.0",
    "@web3-storage/car-block-validator": "^1.2.2",
    "big-json": "^3.2.0",
    "commander": "^14.0.0",
    "files-from-path": "^1.1.4",
    "ipfs-car": "^3.0.0",
    "ipfs-unixfs-exporter": "^13.7.3",
    "mime": "^4.0.7",
    "multiformats": "^13.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.2",
    "@types/big-json": "^3.2.5",
    "@types/jest": "^29.0.0",
    "@types/node": "^24.3.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "execa": "^9.6.0",
    "jest": "^29.0.0",
    "memfs": "^4.36.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.38.0"
  }
}
